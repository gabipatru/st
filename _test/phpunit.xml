<phpunit
        colors="true"
        
        stopOnError="true"
        stopOnFailure="false"
        stopOnIncomplete="false"
        stopOnSkipped="false"
        stopOnRisky="false"
        
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        
        verbose="true"
>
    <testsuites>
        <testsuite name="main">
            <directory suffix=".test.php">./</directory>
        </testsuite>
    </testsuites>
    
    <groups>
        <include>
            <group>fast</group>
            <group>slow</group>
        </include>
    </groups>
</phpunit>